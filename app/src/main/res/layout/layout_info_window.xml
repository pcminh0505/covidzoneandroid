<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_white_corner"
    android:padding="20dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/zone_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Fetching Zone Name..."
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/zone_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Fetching Address..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/zone_leader_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Fectching Leader Name..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/zone_leader_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Fetching Leader Contact..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/zone_capacity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="Fetching Capacity..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/zone_login_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_italic"
        android:gravity="center"
        android:text="Please log in to register"
        android:textSize="15sp"
        android:visibility="gone"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/zone_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_italic"
        android:gravity="center"
        android:text="id (hidden)"
        android:visibility="gone"
        android:textSize="15sp"
        android:textStyle="italic" />
</LinearLayout>
